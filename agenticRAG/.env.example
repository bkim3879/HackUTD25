# Copy this file to agenticRAG/.env and fill in your NVIDIA/Brev credentials.
# Nemotron chat deployment (work-order + assistant requests)
NIM_API_KEY=brev_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NIM_API_BASE=https://api.brev.dev/v1
NIM_LLM_MODEL=nvcf:nvidia/nemotron-nano-9b-v2:dep-xxxxxxxxxxxxxxxx

# Embedding deployment (set to nvidia/embedding-2.0 or another compatible model)
NIM_EMBED_MODEL=nvidia/embedding-2.0

# Retrieval options
NIM_TOP_K=4
# Set to true to force lexical retrieval when no embeddings endpoint exists
NIM_USE_LEXICAL=false
